@page "/users"
@using ConstructionManagement.Client.Services.UserService;
@inject IUserService UserServices
<PageTitle>Users</PageTitle>
<h3>Users</h3>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Construction Company Name</th>
            <th>Delivery Address</th>
            <th>Contact</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in UserServices.Users)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.ConstructionCompanyName</td>
                <td>@user.DeliveryAddress</td>
                <td>@user.Contact</td>
                <td>
                    <button class="btn btn-primary"><i class="oi oi-pencil" style="margin-left:10px;"></i>Edit</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    protected override async Task OnInitializedAsync()
    {
        await UserServices.GetUsers();
    }
}