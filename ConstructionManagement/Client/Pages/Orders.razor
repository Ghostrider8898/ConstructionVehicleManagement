@page "/orders"
@using ConstructionManagement.Client.Services.OrderServices;
@inject IOrderService OrderService
<h3>Orders</h3>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>User</th>
            <th>Item Count</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vehicle in OrderService.orders)
        {
            <tr>
                <td>@vehicle.Id</td>
                <td>@vehicle.User</td>
                <td>@vehicle.Items.Count()</td>
                <td>
                    <button class="btn btn-primary"><i class="oi oi-pencil" style="margin-left:10px;"></i>Edit</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    protected override async Task OnInitializedAsync()
    {
        await OrderService.GetOrders();
    }
}